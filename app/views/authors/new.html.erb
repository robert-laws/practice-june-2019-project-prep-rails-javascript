<h5>New Author Form</h5>
<%= form_for(@author) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :age %>
    <%= f.text_field :age, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<hr>

<form id="add-author-form" action="/authors" method="post">
  <input type=hidden name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
    <label for="name-entry">Name</label>
    <input id="name-entry" type="text" class="form-control" name="author[name]">
  </div>
  <div class="form-group">
    <label for="age-entry">Age</label>
    <input id="age-entry" type="text" class="form-control" name="author[age]">
  </div>
  <div class="form-group">
    <label for="location-entry">Location</label>
    <input id="location-entry" type="text" class="form-control" name="author[location]">
  </div>
  <button type="submit" class="btn btn-primary">Create New Author</button>
</form>

<hr>

<div id="authorResult">
  <h2 id="authorName"></h2>
  <p id="authorAge"></p>
  <p id="authorLocation"></p>
</div>